#!/bin/bash

# Root path jaha saare observation ID folders rakhe hain
root_path="/media/rohit/Expansion/BHU/Objects/Cen_A/Swift_UVOT"

# Swift_UVOT ke andar ek hi sk_image folder banao
sk_image="$root_path/sk_image"
mkdir -p "$sk_image"

# Har observation ID folder ke liye loop
for obsid in "$root_path"/*; do
    if [ -d "$obsid/uvot/image" ]; then
        cp "$obsid/uvot/image"/*_sk.img.gz "$sk_image"/ 2>/dev/null
        echo "Copied files from: $(basename "$obsid")"
    fi
done
